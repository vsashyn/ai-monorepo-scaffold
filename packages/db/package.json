{
  "name": "@app/db",
  "type": "module",
  "version": "0.0.1",
  "description": "Database package for the app",
  "main": "index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts"
  },
  "scripts": {
    "db:codegen": "kysely-codegen --config-file .kysely-codegenrc.yaml",
    "db:migrate:create": "node-pg-migrate -m ./migrations --migration-file-language sql --template-file-name ./templates/migration-template.sql create",
    "db:migrate:up": "node-pg-migrate -m ./migrations --migration-file-language sql up",
    "db:migrate:down": "node-pg-migrate -m ./migrations --migration-file-language sql down",
    "db:schema:dump": "pg_dump -s -O -x -d \"$DATABASE_URL\" | sed '/^SET /d; /set_config/d' > schema.sql",
    "db:migrate": "pnpm db:migrate:up && pnpm db:codegen && pnpm db:schema:dump",
    "db:seed": "psql \"$DATABASE_URL\" -f seed.sql",
    "db:load:schema": "psql \"$DATABASE_URL\" -f schema.sql",
    "db:set-to-latest-migration": "node-pg-migrate -m ./migrations --migration-file-language sql up --fake",
    "db:setup": "pnpm db:load:schema && pnpm db:set-to-latest-migration && pnpm db:seed",
    "db:reset": "psql \"$DATABASE_URL\" -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' && pnpm db:setup",
    "typecheck": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --max-warnings=0 --cache --concurrency=2",
    "lint:fix": "eslint . --fix --cache --concurrency=2",
    "lint:ci": "eslint . --max-warnings=0 --cache --concurrency=1 --no-error-on-unmatched-pattern"
  },
  "dependencies": {
    "@app/utils": "workspace:*",
    "@neondatabase/serverless": "^1.0.2",
    "bufferutil": "^4.0.9",
    "kysely": "^0.28.8",
    "kysely-neon": "^1.3.0",
    "pg": "^8.16.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.27",
    "@types/node": "^20.19.21",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.18.1",
    "better-auth": "^1.3.27",
    "dotenv": "^16.6.1",
    "kysely-codegen": "^0.18.5",
    "node-pg-migrate": "^7.9.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
